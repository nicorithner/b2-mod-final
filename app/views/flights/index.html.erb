<h1>Flights</h1>>

<%@flights.each do |flight| %>
  <%=flight.number%><br/>
  <div id="flight-<%=flight.id%>">
    <%flight.passengers.each do |passenger| %>
      <div id="passenger-<%=passenger.id%>"></div>
        <%=passenger.name%> | <%=link_to 'Remove', "/flights/#{flight.id}/passengers?passenger_id=#{passenger.id}", method: :delete%><br/>
      </div>
    <%end%>
  </div>
<%end%>